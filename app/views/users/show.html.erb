<% provide(:title, @user.name) %>
<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<div class="row">
  <aside class="span4">
    <section>
      <header class="user-header">
        <div class="user-avatar">
          <%= gravatar_for @user %>
        </div>
        <h1>
          Welcome <%= @user.name %>
        </h1>
      </header>
    </section>
  </aside>
</div>