<% provide(:title, "Log in") %>

<section id="presentation" class="mainArea">
 
  <section class="appMain">
     <header class="mainTitle">

       <h1>Log in</h1>
     </header>
     <section class="mainBody">
      <div style="width:100%;padding:10px;" class="form-basic" role="form" >
         <% flash.each do |key, value| %>
           <div class="alert alert-<%= (key == 'error') ? 'danger' : key %>"><%= value %></div>
         <% end %>
          <%= form_for(:session, url: sessions_path) do |f| %>

            
        <div class="form-group has-feedback">
            <%= f.label :username %>
            <%= f.text_field :username, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: "form-control" %>
        </div>

            <%= f.submit "Log in", class: "btn btn-large btn-primary" %>
          <% end %>
          
          <p>New user? <%= link_to "Sign up now!", signup_path %></p>
        </div>
      </div>
     </section>
  </section>
</section>
