<!--%if signed_in? %-->
      <header class="appHeader">
        <nav class="appBreadcrumb">
          <%= render_breadcrumbs :builder => ::BootstrapBreadcrumbsBuilder %>
        </nav>
        <nav class="rightMenu">
           <%if signed_in? %>

              <div class="btn-group">
                <button type="button" class="btn btn-default btn-sm "><i class="fa fa-user fa-fw"></i>&nbsp;<%=current_user.name%></button>
                <button type="button" class="btn btn-primary btn-sm dropdown-toggle" data-toggle="dropdown">
                  <span class="caret"></span>
                  <span class="sr-only">Toggle Dropdown</span>
                </button>
                <ul class="dropdown-menu" role="menu">
                  <li><%= link_to content_tag(:i,'',:class=>"fa fa-pencil fa-fw")+'Profile', current_user %></li>
                  <li><a href="#"><i class="fa fa-cog fa-fw"></i>Settings</a></li>
                  <li><a href="#"><i class="fa fa-envelope fa-fw"></i>Contact WHO</a></li>
                  <li class="divider"></li>
                  <li>
                    <%= link_to "Log out", logout_path, method: "delete" %>
                  </li>
                </ul>
              </div>
            <% else %>
              <%= link_to "Log in", login_path %>
            <% end %>
        </nav>
      </header>
<!--%end%-->
