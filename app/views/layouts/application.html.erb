<!DOCTYPE html>
<html ng-app="AngularSurveys">
<head>
  <title><%= full_title(yield(:title)) %> </title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= csrf_meta_tags %>
</head>
<body class="fluid">
  <!-- begin: page -->
  <div id="page">
    <!-- begin: wrapper -->
    <div id="wrapper">
    	
      <!-- begin: header -->
      <header id="header">
				
        <!-- begin: branding -->
        <div id="branding">
          <a href="http://who.int" title="WHO | World Health Organization"><%= image_tag "who_wrapper_en.gif", alt:"WHO | World Health Organization" %></a>
        </div><!-- end: branding -->
				
      </header><!-- end: header -->
			
      <!-- begin: main -->
      <div id="main">
      		
        <!-- begin: title -->
        <div id="title">
          <h1>HIV Drug Resistance Database</h1>
        </div><!-- end: title -->
      
          <div id="user_header">
          	<%= render_breadcrumbs %>
	        <div class="session_header">
              <%unless session[:user_id]%>
                <ul class="list-inline">
                  <li><%= link_to :Login , :login, class: "nav_links"%></li>	
                </ul>
              <%else%>
                <ul class="nav">
                  <li><%= link_to :Profile , :profile, class: "nav_links" %> |</li>
                   <li><%= link_to :Setting , :setting, class: "nav_links" %> |</li>
                  <li><%= link_to :Logout , :logout, class: "nav_links" %></li>	
                </ul>
              <%end%>
	        </div>
	      </div>
        <% if flash[:color]== "valid" %>
          <div class="valid_notice">
            <p><%= flash[:notice]%></p>
          </div>
	    <% elsif flash[:color]== "invalid"%>
          <div class="invalid_notice">
            <p><%=flash[:notice]%></p>
          </div>
        <%else%>
          <div class="notice">
            <p><%=flash[:notice]%></p>
          </div>
        <%end%>

        <!-- begin: content -->
        <div id="content">
          <%= yield %>
        </div><!-- end: content -->
        <!-- all clear -->
        <div class="clear"><!-- all clear --></div>
				
      </div><!-- end: main -->

      <!-- begin: footer -->
      <footer id="footer">
        <!-- begin: foot -->
        <div id="foot">
        </div>
        <!-- end: foot -->
      </footer> <!--end: footer -->
      
    </div><!-- end: wrapper -->
  </div><!-- end: page -->
  <%= javascript_include_tag 'application'%>
</body>
</html>
